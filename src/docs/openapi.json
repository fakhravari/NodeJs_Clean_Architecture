        "summary": "ثبت سفارش",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OrderCreate"
              },
              "examples": {
                "sample": {
                  "value": {
                    "CustomerID": 1,
                    "TotalAmount": 0
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "سفارش ثبت شد"
