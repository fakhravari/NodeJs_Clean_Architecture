  "components": {
    "schemas": {
      "Customer": {
        "type": "object",
        "properties": {
          "CustomerID": {
            "type": "integer"
          },
          "FullName": {
            "type": "string"
          },
          "Phone": {
            "type": "string"
          },
          "Email": {
            "type": "string"
          },
          "City": {
            "type": "string"
          }
        }
      },
      "CustomerCreate": {
        "type": "object",
        "required": [
          "FullName"
        ],
        "properties": {
          "FullName": {
            "type": "string"
          },
          "Phone": {
            "type": "string"
          },
          "Email": {
            "type": "string"
          },
          "City": {
            "type": "string"
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "ProductID": {
            "type": "integer"
          },
          "ProductName": {
            "type": "string"
          },
          "Price": {
            "type": "number"
          },
          "Stock": {
            "type": "integer"
          }
        }
      },
      "ProductCreate": {
        "type": "object",
        "required": [
          "ProductName",
          "Price"
        ],
        "properties": {
          "ProductName": {
            "type": "string"
          },
          "Price": {
            "type": "number"
          },
          "Stock": {
            "type": "integer"
          }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "OrderID": {
            "type": "integer"
          },
          "CustomerID": {
            "type": "integer"
          },
          "OrderDate": {
            "type": "string",
            "format": "date-time"
          },
          "TotalAmount": {
            "type": "number"
          }
        }
      },
      "OrderCreate": {
        "type": "object",
        "required": [
          "CustomerID"
        ],
        "properties": {
          "CustomerID": {
            "type": "integer"
          },
          "TotalAmount": {
            "type": "number"
          }
        }
      },
      "OrderUpdate": {
        "type": "object",
        "properties": {
          "TotalAmount": {
            "type": "number"
          }
        }
      },
      "OrderDetail": {
        "type": "object",
        "properties": {
          "OrderDetailID": {
            "type": "integer"
          },
          "OrderID": {
            "type": "integer"
          },
          "ProductID": {
            "type": "integer"
          },
          "Quantity": {
            "type": "integer"
          },
          "UnitPrice": {
            "type": "number"
          }
        }
      },
      "OrderDetailCreate": {
        "type": "object",
        "required": [
          "OrderID",
          "ProductID",
          "Quantity",
          "UnitPrice"
        ],
        "properties": {
          "OrderID": {
            "type": "integer"
          },
          "ProductID": {
            "type": "integer"
          },
          "Quantity": {
            "type": "integer"
          },
          "UnitPrice": {
            "type": "number"
          }
        }
      },
      "OrderDetailUpdate": {
        "type": "object",
        "properties": {
          "Quantity": {
            "type": "integer"
          },
          "UnitPrice": {
            "type": "number"
          }
        }
      }
    }
  }
}