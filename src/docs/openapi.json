{
  "openapi": "3.0.3",
  "info": {
    "title": "Kiandent Node.js API",
    "version": "1.0.0",
    "description": "مستندات کامل Swagger برای CRUD روی Customers, Products, Orders, OrderDetails"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local server"
    }
  ],
  "tags": [
    {
      "name": "Customers",
      "description": "مدیریت مشتریان"
    },
    {
      "name": "Products",
      "description": "مدیریت محصولات"
    },
    {
      "name": "Orders",
      "description": "مدیریت سفارش‌ها"
    },
    {
      "name": "OrderDetails",
      "description": "جزئیات سفارش‌ها"
    }
  ],
  "paths": {
    "/customers": {
      "get": {
        "tags": [
          "Customers"
        ],
        "summary": "دریافت همه مشتری‌ها",
        "responses": {
          "200": {
            "description": "لیست مشتری‌ها",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Customer"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Customers"
        ],
        "summary": "افزودن مشتری جدید",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CustomerCreate"
              },
              "examples": {
                "sample": {
                  "value": {
                    "FullName": "علی رضایی",
                    "Phone": "09120000000",
                    "Email": "ali@example.com",
                    "City": "تهران"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "مشتری اضافه شد"
          }
        }
      }
    },
    "/customers/{id}": {
      "get": {
        "tags": [
          "Customers"
        ],
        "summary": "دریافت مشتری با ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "مشتری",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Customer"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Customers"
        ],
        "summary": "بروزرسانی مشتری",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CustomerCreate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "بروزرسانی شد"
          }
        }
      },
      "delete": {
        "tags": [
          "Customers"
        ],
        "summary": "حذف مشتری",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "حذف شد"
          }
        }
      }
    },
    "/products": {
      "get": {
        "tags": [
          "Products"
        ],
        "summary": "دریافت همه محصولات",
