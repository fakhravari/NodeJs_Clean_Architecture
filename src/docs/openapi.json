        ],
        "summary": "دریافت همه جزئیات سفارش",
        "responses": {
          "200": {
            "description": "لیست جزئیات",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/OrderDetail"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
