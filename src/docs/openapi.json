        "summary": "افزودن جزئیات سفارش",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OrderDetailCreate"
              },
              "examples": {
                "sample": {
                  "value": {
                    "OrderID": 1,
                    "ProductID": 1,
                    "Quantity": 2,
                    "UnitPrice": 750000
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "جزئیات سفارش اضافه شد"
